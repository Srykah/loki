{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "loki-sfml-alpha",
  "$defs": {
    "Color": {
      "type": "string",
      "pattern": "^#[0-9a-f]{6}([0-9a-f]{2})?$"
    },
    "Duration": {
      "description": "duration in milliseconds",
      "type": "integer",
      "minimum": 0
    },
    "FloatRect": {
      "type": "object",
      "properties": {
        "left": {
          "type": "number"
        },
        "top": {
          "type": "number"
        },
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        }
      }
    },
    "IntRect": {
      "type": "object",
      "properties": {
        "left": {
          "type": "integer"
        },
        "top": {
          "type": "integer"
        },
        "width": {
          "type": "integer"
        },
        "height": {
          "type": "integer"
        }
      }
    },
    "Vector2f": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      }
    },
    "Vector2i": {
      "type": "object",
      "properties": {
        "x": {
          "type": "integer"
        },
        "y": {
          "type": "integer"
        }
      }
    }
  }
}
